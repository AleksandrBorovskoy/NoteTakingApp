@page
@model NoteTakingApp.Pages.RegistrationModel
@{
    ViewData["Title"] = "Registration";
}

<section class="vh-100">
    <div class="d-flex align-items-center h-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h2 class="text-uppercase text-center mb-5">Create an account</h2>

                            <form method="post">

                                <div asp-validation-summary="All" class="text-danger"></div>

                                <div class="form-outline mb-4">
                                    <input type="text" asp-for="Model.Name" placeholder="Your Name" class="form-control form-control-lg" />
                                    <span class="text-danger" asp-validation-for="Model.Name"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="email" asp-for="Model.Email" placeholder="Your Email" class="form-control form-control-lg" />
                                    <span class="text-danger" asp-validation-for="Model.Email"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="password" asp-for="Model.Password" placeholder="Password" class="form-control form-control-lg" />
                                    <span class="text-danger" asp-validation-for="Model.Password"></span>
                                </div>

                                <div class="form-outline mb-4">
                                    <input type="password" asp-for="Model.ConfirmPassword" placeholder="Repeat your password" class="form-control form-control-lg" />
                                    <span class="text-danger" asp-validation-for="Model.ConfirmPassword"></span>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-success btn-block btn-lg text-body" style="background: linear-gradient(to right, rgba(132, 250, 176, 1), rgba(143, 211, 244, 1))">
                                        Register
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Have already an account? <a asp-page="/Login" class="fw-bold text-body"><u>Login here</u></a>
                                </p>

                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>